<p id="smsCostText" style="display: none"></p>

<script>
  const dropdownButton = document.getElementById("dropdownButton");
  const searchButton = document.getElementById("searchButton");
  const dropdownList = document.getElementById("dropdownList");
  const smsCostText = document.getElementById("smsCostText");

  const countryCosts = {
    Canada: "$0.03375",
    Unknown: "$0.475",
    Andorra: "$0.6256",
    "United Arab Emirates": "$0.5187",
    Afghanistan: "$1.3808",
    "Antigua and Barbuda": "$0.4655",
    Anguilla: "$0.62745",
    Albania: "$0.43225",
    Armenia: "$0.6574",
    Angola: "$0.42135",
    Argentina: "$0.3529",
    "American Samoa": "$0.89345",
    Austria: "$0.46505",
    Australia: "$0.1782",
    Aruba: "$0.49115",
    Azerbaijan: "$1.55515",
    "Bosnia and Herzegovina": "$0.399",
    Barbados: "$0.5833",
    Bangladesh: "$1.2602",
    Belgium: "$0.49875",
    "Burkina Faso": "$0.6313",
    Bulgaria: "$0.58615",
    Bahrain: "$0.1729",
    Burundi: "$1.22455",
    Benin: "$0.6864",
    Bermuda: "$0.56335",
    Brunei: "$0.095",
    Bolivia: "$0.58",
    Brazil: "$0.2845",
    Bahamas: "$0.2494",
    Bhutan: "$1.1918",
    Botswana: "$0.47405",
    Belarus: "$1.1975",
    Belize: "$1.30055",
    "DR Congo": "$0.798",
    "Central Africa": "$0.57855",
    Congo: "$0.9495",
    Switzerland: "$0.3444",
    "Ivory Coast": "$0.5961",
    "Cook Islands": "$0.6631",
    Chile: "$0.3092",
    Cameroon: "$0.65695",
    China: "$0.1748",
    Colombia: "$0.1969",
    "Costa Rica": "$0.1995",
    Cuba: "$0.399",
    "Cape Verde": "$0.5833",
    Cyprus: "$0.4104",
    "Czech Republic": "$0.2717",
    Germany: "$0.4465",
  };

  dropdownButton.addEventListener("click", function (event) {
    event.stopPropagation();
    dropdownButton.style.display = "none";
    searchButton.style.display = "block";
    dropdownList.classList.add("active");
  });

  searchButton.addEventListener("input", function () {
    const searchValue = searchButton.value.toLowerCase();
    const countryItems = dropdownList.getElementsByTagName("li");

    for (const item of countryItems) {
      const countryName = item.textContent.toLowerCase();
      if (countryName.includes(searchValue)) {
        item.style.display = "block";
      } else {
        item.style.display = "none";
      }
    }
  });

  dropdownList.addEventListener("click", function (event) {
    // Get the closest li element from the clicked target
    const listItem = event.target.closest("li");
    if (!listItem) return; // If, for some reason, a list item isn't found, just exit

    const selectedCountry = listItem.textContent.trim(); // Use trim to eliminate any potential whitespace

    if (countryCosts[selectedCountry]) {
      smsCostText.innerHTML = `The SMS cost for ${selectedCountry} is <span class="green-	text">${countryCosts[selectedCountry]}</span>.`;
      smsCostText.style.display = "block";
    } else {
      smsCostText.style.display = "none";
    }

    dropdownButton.style.display = "block";
    searchButton.style.display = "none";
    dropdownList.classList.remove("active");
  });

  document.addEventListener("click", function (event) {
    if (!event.target.closest(".custom-dropdown")) {
      dropdownButton.style.display = "block";
      searchButton.style.display = "none";
      dropdownList.classList.remove("active");
    }
  });
</script>
